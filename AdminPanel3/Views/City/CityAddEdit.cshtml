@model AdminPanel3.Models.CityModel

@{
    ViewData["Title"] = Model.CityID == null ? "Add City" : "Edit City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>@ViewData["Title"]</h1>
    </div>

    <section class="section">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@ViewData["Title"]</h5>

                    <form asp-action="CityAddEdit" method="post" class="form-container">
                        <input type="hidden" asp-for="CityID" />

                        <div class="form-group row mb-3">
                            <label asp-for="CityName" class="col-sm-2 col-form-label"><span class="text-danger">*</span>City Name</label>
                            <div class="col-sm-10">
                                <input asp-for="CityName" class="form-control" required />
                                <span asp-validation-for="CityName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="StateID" class="col-sm-2 col-form-label"><span class="text-danger">*</span>State</label>
                            <div class="col-sm-10">
                                <select asp-for="StateID" class="form-control" asp-items="@ViewBag.StateList">
                                    <option value="">--Select State--</option>
                                </select>
                                <span asp-validation-for="StateID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="CountryID" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Country</label>
                            <div class="col-sm-10">
                                <select asp-for="CountryID" class="form-control" asp-items="@ViewBag.CountryList">
                                    <option value="">--Select Country--</option>
                                </select>
                                <span asp-validation-for="CountryID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="CityCode" class="col-sm-2 col-form-label"><span class="text-danger">*</span>City Code</label>
                            <div class="col-sm-10">
                                <input asp-for="CityCode" class="form-control" required />
                                <span asp-validation-for="CityCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2 text-start">
                                <input type="submit" value="@((Model.CityID == null) ? "Add City" : "Save Changes")" class="btn btn-primary" />
                                &nbsp;
                                <a asp-action="CityList" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>

                    </form>

                    @section Scripts {
                        @{
                            await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                    }
                </div><!-- End Card Body -->
            </div><!-- End Card -->
        </div><!-- End Row -->
    </section>
</main>