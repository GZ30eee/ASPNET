@model AdminPanel3.Models.OrderDetailModel

<h2>Add/Edit OrderDetail</h2>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>OrderDetail</h1>
    </div>

    <section class="section">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">OrderDetail</h5>

                    <form asp-action="OrderDetailSave" method="post" class="form-container">
                        <div class="form-group">
                            <input type="hidden" asp-for="OrderDetailID" />
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>Order Number</label>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderNumber"))">
                                    <option value="">--Select OrderNumber--</option>
                                </select>
                                <span asp-validation-for="OrderID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>Product Name</label>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.ProductList, "ProductID", "ProductName"))">
                                    <option value="">--Select Product--</option>
                                </select>
                                <span asp-validation-for="ProductID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="Quantity" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Quantity</label>
                            <div class="col-sm-10">
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="Amount" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Amount</label>
                            <div class="col-sm-10">
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="TotalAmount" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Total Amount</label>
                            <div class="col-sm-10">
                                <input asp-for="TotalAmount" class="form-control" />
                                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>User Name</label>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                    <option value="">--Select User--</option>
                                </select>
                                <span asp-validation-for="UserID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" asp-action="OrderDetailSave" value="Save" class="btn btn-primary" />
                            &nbsp;
                            <a asp-action="OrderDetailList" class="btn btn-secondary">Cancel</a>
                        </div>

                    </form>

                    
                </div>
            </div>
        </div>
    </section>
</main>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

