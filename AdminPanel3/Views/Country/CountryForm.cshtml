@model AdminPanel3.Models.Country

@{
    ViewData["Title"] = Model.CountryID == 0 ? "Add Country" : "Edit Country";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>@ViewData["Title"]</h1>
    </div>

    <section class="section">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@ViewData["Title"]</h5>

                    <form asp-action="@((Model.CountryID == 0) ? "Create" : "Edit")" method="post" class="form-container">
                        <input type="hidden" asp-for="CountryID" />

                        <div class="form-group row mb-3">
                            <label asp-for="CountryName" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Country Name</label>
                            <div class="col-sm-10">
                                <input asp-for="CountryName" class="form-control" required />
                                <span asp-validation-for="CountryName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="CountryCode" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Country Code</label>
                            <div class="col-sm-10">
                                <input asp-for="CountryCode" class="form-control" required />
                                <span asp-validation-for="CountryCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2 text-start">
                                <input type="submit" value="@((Model.CountryID == 0) ? "Add Country" : "Save Changes")" class="btn btn-primary" />
                                &nbsp;
                                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>

                    </form>

                    <div>
                        <!-- Additional content can go here -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}